@model Projektarbete_ASP.NET.Models.Domain.Movie

<div class="col-3 mb-3">
    <a href="/movie/@Model.UrlSlug">
        <img src="@Model.ImageUrl"
             alt=""
             class="mb-2" />
        <div class="row mb-1">
            <div class="rating col">@Model.Rating</div>
        </div>
        <div class="row mb-1">
            <div class="title col text-start">
                @Model.Title
            </div>
        </div>
        <div class="row mb-1">
            <div class="releaseYear col">@Model.ReleaseYear</div>
        </div>
    </a>
</div>
